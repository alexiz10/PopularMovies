<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".DetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_detail_backdrop_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/details_movie_backdrop_description" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/details_layout_padding">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_detail_image"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/details_movie_poster_description"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/poster_placeholder" />

                <TextView
                    android:id="@+id/tv_detail_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/details_text_view_margin_start"
                    android:textSize="@dimen/details_title_text_size"
                    android:textColor="@android:color/black"
                    android:fontFamily="sans-serif-condensed"
                    tools:text="@string/details_movie_title"
                    app:layout_constraintTop_toTopOf="@+id/iv_detail_image"
                    app:layout_constraintStart_toEndOf="@+id/iv_detail_image" />

                <TextView
                    android:id="@+id/tv_detail_release_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/details_text_view_margin_start"
                    tools:text="@string/details_movie_release_date"
                    app:layout_constraintTop_toBottomOf="@+id/tv_detail_title"
                    app:layout_constraintStart_toEndOf="@+id/iv_detail_image" />

                <TextView
                    android:id="@+id/tv_detail_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/details_text_view_margin_start"
                    tools:text="@string/details_movie_rating"
                    app:layout_constraintTop_toBottomOf="@+id/tv_detail_release_date"
                    app:layout_constraintStart_toEndOf="@+id/iv_detail_image" />

                <Button
                    android:id="@+id/btn_detail_favorite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    tools:text="@string/details_add_to_favorites"
                    app:layout_constraintTop_toBottomOf="@+id/tv_detail_rating"
                    app:layout_constraintStart_toEndOf="@+id/iv_detail_image" />

                <TextView
                    android:id="@+id/tv_detail_synopsis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/details_synopsis_margin_top"
                    tools:text="@string/details_movie_synopsis"
                    app:layout_constraintTop_toBottomOf="@+id/iv_detail_image"
                    app:layout_constraintStart_toEndOf="@+id/iv_detail_image" />

            </android.support.constraint.ConstraintLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/trailers_label_margin_top"
                android:text="@string/trailers"
                android:textSize="@dimen/trailers_label_text_size"
                android:textColor="@android:color/black" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/separator_height"
                android:background="@android:color/black" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_trailers"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/trailers_recyclerview_height"
                    android:layout_marginTop="@dimen/trailers_recyclerview_margin"
                    android:paddingTop="@dimen/trailers_recyclerview_padding"
                    android:paddingStart="0dp"
                    android:paddingEnd="@dimen/trailers_recyclerview_padding"
                    android:paddingBottom="@dimen/trailers_recyclerview_padding"
                    android:orientation="horizontal"
                    android:scrollbars="none"
                    android:background="@android:color/white" />

                <TextView
                    android:id="@+id/tv_trailer_error_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/colorPrimaryText"
                    android:textAlignment="center"
                    android:visibility="invisible"
                    tools:text="@string/trailer_error_message" />

                <ProgressBar
                    android:id="@+id/pb_trailer_loading_indicator"
                    android:layout_width="@dimen/progress_bar_size"
                    android:layout_height="@dimen/progress_bar_size"
                    android:layout_gravity="center"
                    android:visibility="invisible" />

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/reviews_label_margin_top"
                android:text="@string/reviews"
                android:textSize="@dimen/reviews_label_text_size"
                android:textColor="@android:color/black" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/separator_height"
                android:background="@android:color/black" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_reviews"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/reviews_recyclerview_margin_top"
                    android:paddingStart="0dp"
                    android:paddingTop="@dimen/reviews_recyclerview_padding"
                    android:paddingEnd="@dimen/reviews_recyclerview_padding"
                    android:paddingBottom="@dimen/reviews_recyclerview_padding"
                    android:orientation="horizontal"
                    android:scrollbars="none"
                    android:background="@android:color/white" />

                <TextView
                    android:id="@+id/tv_review_error_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/colorPrimaryText"
                    android:textAlignment="center"
                    android:visibility="invisible"
                    tools:text="@string/review_error_message" />

                <ProgressBar
                    android:id="@+id/pb_review_loading_indicator"
                    android:layout_width="@dimen/progress_bar_size"
                    android:layout_height="@dimen/progress_bar_size"
                    android:layout_gravity="center"
                    android:visibility="invisible" />

            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>